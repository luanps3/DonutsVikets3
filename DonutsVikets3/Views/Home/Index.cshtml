@model IEnumerable<DonutsVikets.Models.Produto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4">
    <h1 class="display-4" style="color:#c74f7d;">Donuts Deliciosos</h1>
    <p class="lead" style="color:#a8446d;">Escolha seu sabor favorito!</p>
</div>

<div class="row">
@foreach (var p in Model)
{
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100 border-0" style="background:#ffe6f1;">
            <img src="@p.ImagemUrl" class="card-img-top" alt="@p.Nome" style="height:200px;object-fit:cover;" />
            <div class="card-body">
                <h5 class="card-title" style="color:#c74f7d;">@p.Nome</h5>
                <p class="card-text" style="color:#7a2f4b;">@p.Descricao</p>
                <p class="fw-bold" style="color:#a8446d;">Preço: R$ @p.Preco.ToString("N2")</p>
                <span class="badge" style="background:#f8bfd4;color:#7a2f4b;">@p.Categoria?.Nome</span>
            </div>
            <div class="card-footer bg-transparent border-0 text-center">
                <a class="btn btn-sm" style="background:#c74f7d;color:#fff;" asp-controller="Produtos" asp-action="Details" asp-route-id="@p.Id">Detalhes</a>
            </div>
        </div>
    </div>
}
</div>
